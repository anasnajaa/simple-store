<%- include('../common/header.ejs', {title: "Signup"}); -%>
<%- include('../common/navbar.ejs'); -%>
<div id="main-container" class="container mt-4">
    <div class="row">
        <div class="col-12 col-md-4 col-lg-4 col-xl-4"></div>
        <div class="col-12 col-md-4 col-lg-4 col-xl-4">
          <div class="jumbotron pt-2 pb-2">
            <h1 class="display-4 text-center mb-3">Signup</h1>
                <form action="/signup" method="POST">
                    <div class="form-group">
                      <input name="email" type="email" value="<%=formData.email%>" class="form-control" placeholder="New Email">
                      <%if(errors && errors.email){%>
                        <p class="small text-danger"><%=errors.email%></p>
                      <%}%>
                    </div>
                    <div class="form-group">
                      <input name="password" type="password" class="form-control" placeholder="New Password">
                      <%if(errors && errors.password){%>
                        <p class="small text-danger"><%=errors.password%></p>
                      <%}%>
                    </div>
                    <button type="submit" class="btn btn-block btn-info">Create Account</button>
                    <hr class="my-4">
                    <p class="mt-2 mb-3 text-muted"><a href="/login">Have an account? Login here</a></p>
                  </form>
              </div>
        </div>
        <div class="col-12 col-md-4 col-lg-4 col-xl-4"></div>
    </div>
    </body>
</div>
<%- include('../common/footer.ejs'); -%>